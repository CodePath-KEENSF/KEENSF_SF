<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivAthleteProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_user_photos_u" />

    <TextView
        android:id="@+id/tvAthleteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivAthleteProfilePic"
        android:layout_toRightOf="@+id/ivAthleteProfilePic"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Athlete Name"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvAthleteAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAthleteName"
        android:layout_alignLeft="@+id/tvAthleteName"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="10sp"
        android:text="6 years" />

</RelativeLayout>