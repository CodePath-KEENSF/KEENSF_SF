<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.keenusa.connect.activities.LoginActivity" >

    <Button
        android:id="@+id/btnGoToAthleteList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGoToCoachList"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Get Coach Attendance List" />

    <Button
        android:id="@+id/btnGoToCoachList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGoToAthleteList"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnGoToAthleteList"
        android:layout_marginBottom="50dp"
        android:text="Get Program List" />

    <Button
        android:id="@+id/btnSessionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGoToAthleteList"
        android:layout_alignLeft="@+id/btnGoToAthleteList"
        android:layout_alignRight="@+id/btnGoToAthleteList"
        android:layout_marginBottom="16dp"
        android:text="Get Program Enrolment List" />
    
    <Button
        android:id="@+id/btnSessionList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSessionDetails"
        android:layout_alignLeft="@+id/btnSessionDetails"
        android:layout_alignRight="@+id/btnSessionDetails"
        android:layout_marginBottom="15dp"
        android:text="Get Session List" />
    
    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSessionList"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/check_in_button" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCheckIn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/log_in_button" />

</RelativeLayout>
