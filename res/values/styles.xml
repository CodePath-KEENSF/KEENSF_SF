<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">serif</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Keen</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText.Keen</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Keen</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Keen</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Keen</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Keen</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_keen</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_keen</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_keen</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Keen</item>
        <item name="android:windowBackground">@color/main_theme_text_color</item>
        <item name="android:spinnerStyle">@style/Spinner.Keen</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem.Keen</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem.Keen</item>
        <item name="android:editTextStyle">@style/EditText.Keen</item>
        <item name="android:buttonStyle">@style/Button.Keen</item>
    </style>

    <style name="ActionBar.Solid.Keen" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/main_theme_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText.Keen</item>
    </style>

    <style name="ActionBarTitleText.Keen" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_theme_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarTabStyle.Keen" parent="@android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_keen</item>
    </style>

    <style name="ActionBarTabText.Keen" parent="@android:Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/main_theme_color</item>
    </style>

    <style name="PopupMenu.Keen" parent="@android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_keen</item>
    </style>

    <style name="DropDownListView.Keen" parent="@android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_keen</item>
    </style>

    <style name="DropDownNav.Keen" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_keen</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_keen</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_keen</item>
    </style>

    <style name="ActionButton.CloseMode.Keen" parent="@android:Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_keen</item>
    </style>

    <style name="Spinner.Keen" parent="@android:Widget.Spinner">
        <item name="android:background">@drawable/keen_spinner_background_holo_light</item>
        <item name="android:textColor">@color/main_theme_color</item>
        <item name="android:dropDownSelector">@drawable/keen_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItem.Keen" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:background">@drawable/keen_item_background_holo_light</item>
        <item name="android:textColor">@color/main_theme_color</item>
    </style>

    <style name="SpinnerDropDownItem.Keen" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/keen_btn_radio_holo_light</item>
    </style>

    <style name="EditText.Keen" parent="@android:Widget.EditText">
        <item name="android:background">@drawable/keen_edit_text_holo_light</item>
    </style>

    <style name="Button.Keen" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/keen_btn_default_holo_light</item>
        <item name="android:height">48dip</item>
        <item name="android:width">135dp</item>
        <item name="android:textColor">@color/main_theme_text_color</item>
    </style>

    <style name="TextView.ActiveContact.Keen" parent="@android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.InactiveContact.Keen" parent="@android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/no_data_message_text_color</item>
        <item name="android:textStyle">italic</item>
    </style>
    
     <style name="TextView.Regular.Keen" parent="@android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>
    
      <style name="TextView.NoInfo.Keen" parent="@android:Widget.TextView">
        <item name="android:textColor">@color/no_data_message_text_color</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>